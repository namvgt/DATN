<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Thông tin máy tính</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="name" class="form-label">Tên máy</label>
                        <input type="text" id="name" class="form-control" placeholder="Nhập tên" />
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <label for="OS" class="form-label">Hệ điều hành</label>
                        <input type="text" id="OS" class="form-control" placeholder="Nhập hệ điều hành" />
                    </div>
                </div>
                <div class="row g-2">
