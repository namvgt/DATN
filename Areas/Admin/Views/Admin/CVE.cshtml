<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Thông tin máy tính</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="cveID" class="form-label">Mã CVE</label>
                        <input type="text" id="cveID" class="form-control" placeholder="Nhập tên" />
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <label for="describer" class="form-label">Mô tả</label>
                        <textarea id="describer" class="form-control" placeholder="Nhập tên" rows="3"></textarea>
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-0">
                        <label for="OS" class="form-label">Hệ điều hành</label>
                        <input type="text" id="OS" class="form-control" placeholder="Nhập OS" />
                    </div>
                    <div class="col mb-0">
                        <label for="SW" class="form-label">Phần mềm</label>
                        <input type="text" id="SW" class="form-control" placeholder="Nhập phần mềm" />
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-0">
                        <label for="point" class="form-label">Đánh giá</label>
                        <input type="number" id="point" class="form-control" placeholder="Nhập điểm" max="10.0" step="0.1"/>
                    </div>
                    <div class="col mb-0">
                        <label for="date" class="form-label">Ngày phát hiện</label>
                        <input type="date" id="date" class="form-control" placeholder="DD / MM / YY" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button type="button" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
